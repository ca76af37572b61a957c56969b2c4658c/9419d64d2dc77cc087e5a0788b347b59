acl lan {
                {% for i in allowed -%}
                {{i}};
                {%endfor%}
        };

options {

	directory "/var/cache/bind";

        forwarders {
                {% for i in forwarders -%}
                {{i}};
                {%endfor%}
	};

        allow-query { lan; };
    
	dnssec-validation no;

};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};